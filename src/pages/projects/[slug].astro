---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Badge from '../../components/ui/Badge.astro';
import projects from '../../data/projects.json';

export function getStaticPaths() {
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
---

<BaseLayout title={`${project.title} - Case Study | Joel Shinness`} description={project.problem}>
  <article class="py-16 px-4">
    <div class="max-w-4xl mx-auto">
      <!-- Back navigation -->
      <nav class="mb-8">
        <a
          href="/projects"
          class="text-accent-teal dark:text-accent-teal-light hover:text-teal-600 dark:hover:text-teal-400 flex items-center gap-2 transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to Projects
        </a>
      </nav>

      <!-- Header section -->
      <header class="mb-12">
        <h1 class="font-heading text-4xl md:text-5xl font-bold uppercase mb-6 text-text-light dark:text-text-dark">
          {project.title}
        </h1>
        <div class="mb-6">
          <Badge
            label={`Project category: ${project.categoryLabel}`}
            value={project.categoryLabel}
            variant="yellow"
            class="rounded-full"
          />
        </div>
        <p class="text-xl text-gray-600 dark:text-gray-400 leading-relaxed">
          {project.problem}
        </p>
      </header>

      <!-- Problem section -->
      <section class="mb-12">
        <h2 class="font-heading text-2xl md:text-3xl font-bold mb-4 border-l-4 border-yellow-400 pl-4 text-text-light dark:text-text-dark">
          The Challenge
        </h2>
        <p class="text-gray-700 dark:text-gray-300 leading-relaxed pl-4">
          {project.problem}
        </p>
      </section>

      <!-- Solution section -->
      <section class="mb-12">
        <h2 class="font-heading text-2xl md:text-3xl font-bold mb-4 border-l-4 border-turquoise pl-4 text-text-light dark:text-text-dark">
          The Solution
        </h2>
        <p class="text-gray-700 dark:text-gray-300 leading-relaxed pl-4">
          {project.solution}
        </p>
      </section>

      <!-- Screenshots gallery section -->
      <section class="mb-12">
        <h2 class="font-heading text-2xl md:text-3xl font-bold mb-6 text-text-light dark:text-text-dark">
          Screenshots
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {project.screenshots.map((screenshot) => (
            <a href={screenshot.src} class="block group">
              <div class="rounded-lg shadow-lg overflow-hidden bg-gray-200 dark:bg-gray-700 aspect-video flex items-center justify-center transition-shadow hover:shadow-xl">
                <img
                  src={screenshot.src}
                  alt={screenshot.alt}
                  width="640"
                  height="360"
                  loading="lazy"
                  class="w-full h-full object-cover"
                  onerror="this.parentElement.innerHTML='<div class=\'p-4 text-center text-gray-500 dark:text-gray-400\'><svg class=\'w-16 h-16 mx-auto mb-2\' fill=\'none\' stroke=\'currentColor\' viewBox=\'0 0 24 24\'><path stroke-linecap=\'round\' stroke-linejoin=\'round\' stroke-width=\'2\' d=\'M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z\' /></svg><p class=\'text-sm\'>' + screenshot.alt + '</p></div>'"
                />
              </div>
            </a>
          ))}
        </div>
      </section>

      <!-- Results summary box with neobrutalist accent -->
      <section class="mb-12">
        <div class="bg-yellow-100 dark:bg-yellow-900/20 border-[4px] border-text-light dark:border-yellow-500 shadow-[6px_6px_0_var(--color-yellow)] dark:shadow-[0_0_20px_color-mix(in_oklch,var(--color-yellow-dark)_75%,transparent)] p-8 rounded-lg">
          <h2 class="font-heading text-2xl md:text-3xl font-bold uppercase mb-6 text-text-light dark:text-text-dark">
            Results
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {project.results.map((result) => (
              <div class="text-center md:text-left">
                <div class="text-5xl font-bold text-yellow-600 dark:text-yellow-400 mb-2">
                  {result.metric}
                </div>
                <div class="text-sm text-gray-600 dark:text-gray-400">
                  {result.label}
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- Testimonial section (conditional) -->
      {project.testimonial && (
        <section class="mb-12">
          <blockquote class="border-l-4 border-gray-300 dark:border-gray-600 pl-6 italic text-gray-700 dark:text-gray-300">
            <p class="text-lg mb-4">"{project.testimonial.quote}"</p>
            <footer class="text-sm text-gray-600 dark:text-gray-400 not-italic">
              â€” {project.testimonial.author}, {project.testimonial.role}
            </footer>
          </blockquote>
        </section>
      )}

      <!-- Built With section -->
      <section class="mb-12">
        <h2 class="font-heading text-2xl md:text-3xl font-bold mb-4 text-text-light dark:text-text-dark">
          Built With
        </h2>
        <div class="flex flex-wrap gap-3">
          {project.technologies.map((tech) => (
            <Badge
              label={`Technology: ${tech}`}
              value={tech}
              variant="turquoise"
              class="rounded-full text-sm"
            />
          ))}
        </div>
      </section>
    </div>
  </article>
</BaseLayout>
