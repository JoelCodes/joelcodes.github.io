---
import BaseLayout from '../layouts/BaseLayout.astro';
import Card from '../components/ui/Card.astro';
import Button from '../components/ui/Button.astro';
import { CheckCircle2 } from '@lucide/astro';
---

<BaseLayout
  title="Thanks! | Joel Shinness"
  description="Thank you for reaching out. I'll respond within 48 hours."
>
  <div class="container mx-auto px-4 py-16 min-h-[70vh] flex items-center justify-center">
    <Card variant="turquoise" class="max-w-2xl text-center">
      <div class="flex flex-col items-center gap-6">
        <!-- Success icon -->
        <div class="text-turquoise dark:text-turquoise-dark">
          <CheckCircle2 size={64} strokeWidth={2} />
        </div>

        <!-- Heading -->
        <h1 class="font-heading font-bold text-4xl uppercase tracking-tight text-text-light dark:text-text-dark">
          Thanks for reaching out!
        </h1>

        <!-- Confirmation message -->
        <p class="font-body text-lg text-text-light dark:text-text-dark max-w-md">
          I'll email you within 48 hours with next steps. Looking forward to learning more about your project!
        </p>

        <!-- Calendar booking CTA -->
        <div class="mt-4">
          <Button
            variant="turquoise"
            size="lg"
            href="https://calendly.com/joelshinness"
            class="inline-block"
          >
            Skip the wait - book a call
          </Button>
        </div>

        <!-- Secondary link to return home -->
        <a
          href="/"
          class="text-sm text-text-muted-light dark:text-text-muted-dark hover:text-turquoise dark:hover:text-turquoise-dark transition-colors underline"
        >
          Return to homepage
        </a>
      </div>
    </Card>
  </div>
</BaseLayout>

<style>
  .container {
    max-width: 1280px;
  }
</style>
