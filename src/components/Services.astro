---
// Services component: Three equal service cards with descriptions and examples
import Card from './ui/Card.astro';
import Button from './ui/Button.astro';
import TechWebApps from './illustrations/TechWebApps.svg';
import TechAutomations from './illustrations/TechAutomations.svg';
import TechAI from './illustrations/TechAI.svg';

const services = [
  {
    title: "AI",
    description: "AI has a lot of promise, and a lot of hype. We find the best job for AI and the best way to use it—no AI slop or crazy API fees. AI will have a specific role, whether that's understanding unpredictable data, performing research, or building software that's safe and reliable.",
    Icon: TechAI,
    variant: "yellow" as const,
    circleClass: "bg-bg-light dark:bg-bg-dark shadow-neo-yellow"
  },
  {
    title: "Automations",
    description: "With platforms like n8n, it's easier than ever to create and maintain just the functionality you need, integrating with Slack, Teams, Excel, Google Drive, or any other system you already use. Want to snap a receipt, send it to WhatsApp, and instantly see how it affects your budget? Automations bring it all together.",
    Icon: TechAutomations,
    variant: "turquoise" as const,
    circleClass: "bg-bg-light dark:bg-bg-dark shadow-neo-turquoise"
  },
  {
    title: "Web Apps",
    description: "Sometimes, you need a user interface that matches your exact needs. With over 15 years of experience making things for the web, if you can describe it, we can make it—and you can be confident it'll be secure, reliable, and present your business in the best possible light.",
    Icon: TechWebApps,
    variant: "magenta" as const,
    circleClass: "bg-bg-light dark:bg-bg-dark shadow-neo-magenta"
  }
];
---

<section id="solutions" aria-labelledby="solutions-heading" class="services py-24 md:py-32 px-6">
  <div class="container max-w-6xl mx-auto">
    <h2 id="solutions-heading" class="font-heading font-bold text-3xl md:text-4xl mb-8 text-center text-text-light dark:text-text-dark">
      Solutions That Fit
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12 pt-10">
      {services.map(service => (
        <div class="service-card-wrapper relative">
          <!-- Icon circle positioned on top edge -->
          <div class:list={[
            "absolute left-1/2 -translate-x-1/2 -top-10 z-10",
            "w-20 h-20 rounded-full flex items-center justify-center",
            "border-[3px] border-text-light dark:border-text-dark",
            service.circleClass
          ]}>
            <service.Icon class="w-14 h-14" />
          </div>
          <Card variant={service.variant} class="text-center">
            <h3 class="font-heading text-xl md:text-2xl font-semibold mb-3 mt-8">
              {service.title}
            </h3>
            <p class="font-body text-base">
              {service.description}
            </p>
          </Card>
        </div>
      ))}
    </div>
    <div class="text-center">
      <Button variant="yellow" href="#contact">Discuss Your Project</Button>
    </div>
  </div>
</section>
