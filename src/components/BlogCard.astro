---
interface Props {
  title: string;
  slug: string;
  pubDate: Date;
  description: string;
  featuredImage: string;
  tags: string[];
  readingTime: number;
}

const { title, slug, pubDate, description, featuredImage, tags, readingTime } = Astro.props;

// Format date
const formattedDate = pubDate.toLocaleDateString('en-US', {
  month: 'short',
  day: 'numeric',
  year: 'numeric',
});

// Truncate description to 160 chars
const excerpt = description.length > 160 ? description.slice(0, 157) + '...' : description;
---

<article class="blog-card show" data-tags={tags.join(',')}>
  <a
    href={`/blog/${slug}`}
    class="block group transition-all duration-300 hover:-translate-y-2 hover:shadow-xl rounded-lg overflow-hidden"
  >
    <!-- Featured image with 16:9 aspect ratio -->
    <div class="relative w-full bg-text-muted-light/10 dark:bg-text-muted-dark/10 overflow-hidden" style="aspect-ratio: 16/9;">
      <img
        src={featuredImage}
        alt={title}
        class="absolute inset-0 w-full h-full object-cover"
        width="640"
        height="360"
        loading="lazy"
        onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
      />
      <!-- Placeholder fallback (hidden by default, shown on error) -->
      <div class="absolute inset-0 items-center justify-center hidden">
        <svg class="w-16 h-16 text-text-muted-light/30 dark:text-text-muted-dark/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      </div>
    </div>

    <!-- Card content -->
    <div class="p-4 bg-bg-light dark:bg-bg-dark group-hover:bg-text-muted-light/5 dark:group-hover:bg-text-muted-dark/5 transition-colors">
      <!-- Title -->
      <h3 class="font-heading text-xl font-semibold mb-2 group-hover:text-accent-teal transition-colors">
        {title}
      </h3>

      <!-- Date and reading time -->
      <div class="flex items-center gap-3 text-sm text-text-muted-light dark:text-text-muted-dark mb-3">
        <time datetime={pubDate.toISOString()}>{formattedDate}</time>
        <span class="text-text-muted-light/50 dark:text-text-muted-dark/50">|</span>
        <span>{readingTime} min read</span>
      </div>

      <!-- Excerpt -->
      <p class="text-sm text-text-muted-light dark:text-text-muted-dark mb-3 line-clamp-3">
        {excerpt}
      </p>

      <!-- Tags -->
      {tags.length > 0 && (
        <div class="flex flex-wrap gap-2">
          {tags.map((tag) => (
            <span class="text-xs px-2 py-1 rounded-full bg-text-muted-light/10 dark:bg-text-muted-dark/10 text-text-muted-light dark:text-text-muted-dark">
              {tag}
            </span>
          ))}
        </div>
      )}
    </div>
  </a>
</article>
