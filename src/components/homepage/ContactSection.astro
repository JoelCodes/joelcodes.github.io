---
import Card from '../ui/Card.astro';
import Input from '../ui/Input.astro';
import Button from '../ui/Button.astro';
---

<section
  id="contact"
  aria-labelledby="contact-heading"
  class="py-24 md:py-32 bg-bg-light dark:bg-bg-dark"
>
  <div class="container mx-auto px-6 md:px-12">
    <h2
      id="contact-heading"
      class="font-heading font-bold text-3xl md:text-4xl uppercase mb-4 text-text-light dark:text-text-dark"
    >
      Let's Talk
    </h2>

    <p class="text-lg md:text-xl text-text-muted-light dark:text-text-muted-dark mb-8">
      Tell me about your project and I'll get back to you within 48 hours.
    </p>

    <!-- Asymmetric 2:1 grid layout -->
    <div class="grid grid-cols-1 md:grid-cols-[2fr_1fr] gap-8 md:gap-12 items-start">
      <!-- Left: Contact form -->
      <div>
        <form action="https://formspree.io/f/YOUR_FORM_ID" method="POST" class="space-y-6">
          <!-- Name field -->
          <Input
            variant="turquoise"
            label="Name *"
            type="text"
            name="name"
            required
            minlength={2}
            placeholder="Your name"
          />

          <!-- Email field -->
          <Input
            variant="turquoise"
            label="Email *"
            type="email"
            name="email"
            required
            placeholder="your@email.com"
          />

          <!-- Message textarea -->
          <div class="input-wrapper">
            <label
              for="message"
              class="input-label font-heading text-sm font-semibold text-text-light dark:text-text-dark mb-2 block"
            >
              Message *
            </label>
            <textarea
              id="message"
              name="message"
              required
              rows={6}
              placeholder="Tell me about your project..."
              class="w-full border-[3px] border-text-light dark:border-text-dark rounded p-4 font-body text-text-light dark:text-text-dark bg-bg-light dark:bg-bg-dark transition-all focus:border-turquoise dark:focus:border-turquoise-dark focus:outline-none focus:shadow-[0_0_0_2px_var(--color-bg-light),0_0_0_4px_var(--color-text-light)] dark:focus:shadow-[0_0_0_2px_var(--color-bg-dark),0_0_0_4px_var(--color-text-dark)]"
            ></textarea>
          </div>

          <!-- Submit button -->
          <Button variant="turquoise" type="submit">
            Send Message
          </Button>

          <!-- Privacy note -->
          <p class="text-sm text-text-muted-light dark:text-text-muted-dark mt-4">
            Your info stays between us. No spam, ever.
          </p>
        </form>
      </div>

      <!-- Right: Alternative contact -->
      <div>
        <Card variant="turquoise">
          <h3 class="font-heading font-bold text-xl mb-3 text-text-light dark:text-text-dark">
            Prefer Email?
          </h3>
          <p class="mb-4 text-text-light dark:text-text-dark">
            Reach me directly at:
          </p>
          <a
            href="mailto:joel@joelshinness.com"
            class="text-lg font-semibold text-turquoise dark:text-turquoise-dark hover:underline break-all"
          >
            joel@joelshinness.com
          </a>
          <p class="mt-4 text-sm text-text-muted-light dark:text-text-muted-dark">
            I respond to every message within 48 hours.
          </p>
        </Card>
      </div>
    </div>
  </div>
</section>

<style>
  /* Custom textarea styling to match Input component */
  textarea:focus-visible {
    border-color: var(--color-turquoise);
  }

  :global(.dark) textarea:focus-visible {
    border-color: var(--color-turquoise-dark);
  }
</style>
