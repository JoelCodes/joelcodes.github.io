---
import Card from '../ui/Card.astro';
---

<section
  id="tech"
  aria-labelledby="tech-heading"
  class="py-24 md:py-32 bg-bg-light dark:bg-bg-dark"
>
  <div class="container mx-auto px-6 md:px-12">
    <h2
      id="tech-heading"
      class="font-heading font-bold text-3xl md:text-4xl uppercase mb-8 text-text-light dark:text-text-dark"
    >
      How I Build
    </h2>

    <!-- Asymmetric 1:2 grid layout -->
    <div class="grid grid-cols-1 md:grid-cols-[1fr_2fr] gap-8 md:gap-12 items-start">
      <!-- Left: Philosophy text -->
      <div class="text-text-light dark:text-text-dark">
        <p class="text-lg mb-4">
          I believe in choosing the right tool for the job. No over-engineering, no chasing trends.
        </p>
        <p class="text-lg">
          Modern, proven technologies that deliver results without unnecessary complexity.
        </p>
      </div>

      <!-- Right: Tech stack grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <!-- Frontend -->
        <Card variant="magenta">
          <h3 class="font-heading font-bold text-xl mb-3 text-text-light dark:text-text-dark">
            Frontend
          </h3>
          <ul class="space-y-2 text-text-light dark:text-text-dark">
            <li>
              <span class="font-semibold">Astro</span> — Fast static sites
            </li>
            <li>
              <span class="font-semibold">React</span> — Interactive UIs
            </li>
            <li>
              <span class="font-semibold">Tailwind CSS</span> — Rapid styling
            </li>
          </ul>
        </Card>

        <!-- Backend -->
        <Card variant="magenta">
          <h3 class="font-heading font-bold text-xl mb-3 text-text-light dark:text-text-dark">
            Backend
          </h3>
          <ul class="space-y-2 text-text-light dark:text-text-dark">
            <li>
              <span class="font-semibold">Node.js</span> — Scalable APIs
            </li>
            <li>
              <span class="font-semibold">Python</span> — Data processing
            </li>
            <li>
              <span class="font-semibold">PostgreSQL</span> — Reliable data
            </li>
          </ul>
        </Card>

        <!-- AI/ML -->
        <Card variant="magenta">
          <h3 class="font-heading font-bold text-xl mb-3 text-text-light dark:text-text-dark">
            AI/ML
          </h3>
          <ul class="space-y-2 text-text-light dark:text-text-dark">
            <li>
              <span class="font-semibold">OpenAI</span> — Natural language
            </li>
            <li>
              <span class="font-semibold">LangChain</span> — AI workflows
            </li>
            <li>
              <span class="font-semibold">Vector DBs</span> — Smart search
            </li>
          </ul>
        </Card>

        <!-- Infrastructure -->
        <Card variant="magenta">
          <h3 class="font-heading font-bold text-xl mb-3 text-text-light dark:text-text-dark">
            Infrastructure
          </h3>
          <ul class="space-y-2 text-text-light dark:text-text-dark">
            <li>
              <span class="font-semibold">Vercel</span> — Fast deploys
            </li>
            <li>
              <span class="font-semibold">AWS</span> — Cloud services
            </li>
            <li>
              <span class="font-semibold">GitHub Actions</span> — CI/CD
            </li>
          </ul>
        </Card>
      </div>
    </div>
  </div>
</section>
