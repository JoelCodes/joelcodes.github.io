---
// Footer component with copyright and basic info
import { Github, Linkedin } from 'lucide-static';

const currentYear = new Date().getFullYear();
---

<footer class="border-t border-text-light/10 dark:border-text-dark/10 py-8 mt-auto bg-bg-light dark:bg-bg-dark">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row items-center justify-between gap-4">
      <!-- Copyright -->
      <p class="text-text-muted-light dark:text-text-muted-dark text-sm text-center md:text-left">
        &copy; {currentYear} Joel Shinness. All rights reserved.
      </p>

      <!-- Built with credit -->
      <p class="text-text-muted-light dark:text-text-muted-dark text-sm text-center md:text-right">
        Built with <a href="https://astro.build" target="_blank" rel="noopener noreferrer" class="text-accent-teal hover:text-accent-teal-hover transition-colors">Astro</a>
      </p>
    </div>

    <!-- Social links -->
    <div class="mt-6 flex justify-center gap-6">
      <a
        href="https://linkedin.com/in/joelshinness"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="LinkedIn (opens in new tab)"
        class="social-link text-text-muted-light dark:text-text-muted-dark hover:text-accent-teal transition-colors"
      >
        <Fragment set:html={Linkedin} />
      </a>
      <a
        href="https://github.com/joelshinness"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="GitHub (opens in new tab)"
        class="social-link text-text-muted-light dark:text-text-muted-dark hover:text-accent-teal transition-colors"
      >
        <Fragment set:html={Github} />
      </a>
    </div>
  </div>
</footer>

<style>
  .social-link svg {
    width: 1.25rem;
    height: 1.25rem;
  }
</style>
