---
// Process component - 5-step workflow showing collaborative process
import ProcessDiscovery from './illustrations/ProcessDiscovery.svg';
import ProcessPrototype from './illustrations/ProcessPrototype.svg';
import ProcessProposal from './illustrations/ProcessProposal.svg';
import ProcessBuild from './illustrations/ProcessBuild.svg';
import ProcessHandover from './illustrations/ProcessHandover.svg';
---

<section id="process" aria-labelledby="process-heading" class="py-24 md:py-32 px-6">
  <div class="container mx-auto max-w-6xl">
    <h2 id="process-heading" class="font-heading text-4xl font-bold text-text-light dark:text-text-dark mb-12 text-center">
      How We Work Together
    </h2>

    <div class="flex flex-col gap-8 max-w-2xl mx-auto">
      <!-- Discovery -->
      <article class="flex gap-6 items-start">
        <div class="text-yellow iso-shadow-sm rounded flex-shrink-0">
          <ProcessDiscovery class="w-12 h-12 md:w-16 md:h-16" />
        </div>
        <div>
          <h3 class="font-heading text-2xl font-semibold text-text-light dark:text-text-dark mb-2">
            Discovery
          </h3>
          <p class="text-text-muted-light dark:text-text-muted-dark leading-relaxed">
            We start by understanding your workflow challenges and business goals.
          </p>
        </div>
      </article>

      <!-- Prototype -->
      <article class="flex gap-6 items-start">
        <div class="text-turquoise iso-shadow-sm rounded flex-shrink-0">
          <ProcessPrototype class="w-12 h-12 md:w-16 md:h-16" />
        </div>
        <div>
          <h3 class="font-heading text-2xl font-semibold text-text-light dark:text-text-dark mb-2">
            Prototype
          </h3>
          <p class="text-text-muted-light dark:text-text-muted-dark leading-relaxed">
            You'll see a working demo before committing, so you can validate the approach early.
          </p>
        </div>
      </article>

      <!-- Proposal -->
      <article class="flex gap-6 items-start">
        <div class="text-magenta iso-shadow-sm rounded flex-shrink-0">
          <ProcessProposal class="w-12 h-12 md:w-16 md:h-16" />
        </div>
        <div>
          <h3 class="font-heading text-2xl font-semibold text-text-light dark:text-text-dark mb-2">
            Proposal
          </h3>
          <p class="text-text-muted-light dark:text-text-muted-dark leading-relaxed">
            We outline scope, timeline, and investment clearlyâ€”no surprises.
          </p>
        </div>
      </article>

      <!-- Build -->
      <article class="flex gap-6 items-start">
        <div class="text-yellow iso-shadow-sm rounded flex-shrink-0">
          <ProcessBuild class="w-12 h-12 md:w-16 md:h-16" />
        </div>
        <div>
          <h3 class="font-heading text-2xl font-semibold text-text-light dark:text-text-dark mb-2">
            Build
          </h3>
          <p class="text-text-muted-light dark:text-text-muted-dark leading-relaxed">
            Your solution takes shape with regular updates keeping you in the loop.
          </p>
        </div>
      </article>

      <!-- Handover -->
      <article class="flex gap-6 items-start">
        <div class="text-turquoise iso-shadow-sm rounded flex-shrink-0">
          <ProcessHandover class="w-12 h-12 md:w-16 md:h-16" />
        </div>
        <div>
          <h3 class="font-heading text-2xl font-semibold text-text-light dark:text-text-dark mb-2">
            Handover
          </h3>
          <p class="text-text-muted-light dark:text-text-muted-dark leading-relaxed">
            We deploy and provide training so you feel confident from day one.
          </p>
        </div>
      </article>
    </div>
  </div>
</section>
