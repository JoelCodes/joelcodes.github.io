---
import type { HTMLAttributes } from 'astro/types';

interface Props extends Omit<HTMLAttributes<'button'>, 'class'> {
  variant?: 'yellow' | 'turquoise' | 'magenta';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  class?: string;
}

const {
  variant = 'yellow',
  size = 'md',
  href,
  type = 'button',
  class: className = '',
  ...rest
} = Astro.props;

const Tag = href ? 'a' : 'button';

const sizeClasses = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3 text-base',
  lg: 'px-8 py-4 text-lg'
};
---

<Tag
  class:list={[`btn btn-${variant}`, className]}
  href={href}
  type={!href ? type : undefined}
  {...rest}
>
  <span class={`btn-front ${sizeClasses[size]}`}>
    <slot />
  </span>
</Tag>

<style>
  /*
   * Neobrutalist Button - 2-layer approach
   * Wrapper = shadow/edge layer (shows border, colored shadow offset)
   * Front = button face that translates on hover/active
   */
  .btn {
    --btn-bg: var(--color-yellow);
    --btn-accent: var(--color-text-light);
    --btn-shadow: oklch(0.65 0.10 95);
    --btn-offset: 4px;

    position: relative;
    display: inline-block;
    border: none;
    background: transparent;
    padding: 0;
    cursor: pointer;
    text-decoration: none;
    /* Reserve space for shadow offset */
    padding-bottom: var(--btn-offset);
  }

  /* Light mode: colored background, dark text/border */
  .btn-yellow {
    --btn-bg: var(--color-yellow);
    --btn-accent: var(--color-text-light);
    --btn-shadow: oklch(0.65 0.10 95);
  }
  .btn-turquoise {
    --btn-bg: var(--color-turquoise);
    --btn-accent: var(--color-text-light);
    --btn-shadow: oklch(0.55 0.07 195);
  }
  .btn-magenta {
    --btn-bg: var(--color-magenta);
    --btn-accent: var(--color-text-light);
    --btn-shadow: oklch(0.55 0.12 350);
  }

  /* Dark mode: black background, colored text/border */
  :global(.dark) .btn-yellow {
    --btn-bg: var(--color-bg-dark);
    --btn-accent: var(--color-yellow-dark);
    --btn-shadow: oklch(0.55 0.08 95);
  }
  :global(.dark) .btn-turquoise {
    --btn-bg: var(--color-bg-dark);
    --btn-accent: var(--color-turquoise-dark);
    --btn-shadow: oklch(0.45 0.05 195);
  }
  :global(.dark) .btn-magenta {
    --btn-bg: var(--color-bg-dark);
    --btn-accent: var(--color-magenta-dark);
    --btn-shadow: oklch(0.45 0.10 350);
  }

  .btn:focus-visible {
    outline: 2px solid var(--color-text-light);
    outline-offset: 4px;
    border-radius: 0.25rem;
  }

  :global(.dark) .btn:focus-visible {
    outline-color: var(--color-text-dark);
  }

  .btn-front {
    display: block;
    position: relative;
    border-radius: 0.25rem;
    font-family: var(--font-heading);
    font-weight: 700;
    color: var(--btn-accent);
    background: var(--btn-bg);
    border: var(--border-neo-thick) solid var(--btn-accent);
    transform: translateY(0);
    transition: transform 150ms ease, box-shadow 150ms ease;
    /* Shadow creates the offset effect - uses darker variant of button color */
    box-shadow: var(--btn-offset) var(--btn-offset) 0 var(--btn-shadow);
  }

  /* Hover: lift up (shadow grows) */
  .btn:hover .btn-front {
    transform: translateY(-2px);
    box-shadow: calc(var(--btn-offset) + 2px) calc(var(--btn-offset) + 2px) 0 var(--btn-shadow);
  }

  /* Active: press down (shadow shrinks) */
  .btn:active .btn-front {
    transform: translateY(2px);
    box-shadow: 2px 2px 0 var(--btn-shadow);
  }
</style>
